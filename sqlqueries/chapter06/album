drop table  IF EXISTS ALBUM;
CREATE TABLE ALBUM (
       ID  serial NOT NULL 
     , SINGER_ID INT NOT NULL
     , TITLE VARCHAR(100) NOT NULL
     , RELEASE_DATE DATE
     , Constraint UQ_SINGER_ALBUM_1 UNIQUE (SINGER_ID, TITLE)
     , PRIMARY KEY (ID)
     , CONSTRAINT FK_ALBUM FOREIGN KEY (SINGER_ID)
                  REFERENCES SINGER (ID)
);